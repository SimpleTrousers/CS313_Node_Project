<!DOCTYPE html>
<html>
<head>
   <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
   <% include ../partials/stumper.ejs %>
<body>
   <div class="container">
      <div class="box"
      <form action="/Answer">
          <input type="submit" value="Answer Page!">
      </form>
      <div class="container steel">
         <h1>Choose a question</h1>
      </div>
      <br />
      <div class="container">
         <form action="/createQuestion" class="container">
              <div class="box steel-gradient">
                 <h1>Question:</h1>
                 <input type="text" id="question" name="question" placeholder="Enter question here"/>
              </div>
              <div class="box">
                 <input type="text" id="answer1" name="answer1" placeholder="Correct Answer goes here" />
              </div>
              <div class="box">
                 <input type="text" id="answer2" name="answer2" placeholder="Other Answer goes here" />
              </div>
              <div class="box">
                 <input type="text" id="answer3" name="answer3" placeholder="Optional Answer goes here" />
              </div>
              <div class="box">
                 <input type="text" id="answer4" name="answer4" placeholder="Optional Answer goes here" />
              </div>
              <input type="submit"/>
         </form>
      </div>

   </div>
</body>
</html>

<table id="table" >  
    <thead>  
        <tr>  
            <th>Question</th>  
            <th>Answer 1</th> 
            <th>Answer 2</th>  
        </tr>  
    </thead>  
     <tbody>  
     <% data.forEach(function (question) { %>
        <tr>  
            <td><%= question.question %></td>  
            <td><%= question.answer1 %></td>
            <td><%= question.answer2 %></td>
        </tr>                                   
     <% }) %>
     </tbody>
</table>   